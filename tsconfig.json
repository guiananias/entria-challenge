{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES5",
    "jsx": "react",
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "incremental": true,

    "baseUrl": "./",
    "paths": {
      "@packages/*": ["packages/b*/src"]
    },

    "removeComments": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,

    "moduleResolution": "Node",
    "esModuleInterop": true,
    "resolveJsonModule": true,

    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
  }
}
